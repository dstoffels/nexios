{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ES6",
		"strict": true,
		"declaration": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/__tests__/**", "**/*.test.ts", "**/*.spec.ts"]
}
