{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "bundler",
		"target": "ES2022",
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"declaration": true,
		"sourceMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"allowArbitraryExtensions": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/__tests__/**", "**/*.test.ts", "**/*.spec.ts"]
}
